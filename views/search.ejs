
<% include ../parts/header %>


        <h4 class="text-center"><b>Search </b></h4>

          <form action="/search" method="POST" encType="multipart/form-data">
            <div class="row">
              <div class="form-group col-md-3">
              <div class="form-group">
                  <select class="form-control" name="company">
                  <option selected >Company</option>
                  <option name="Maruti Suzuki">Maruti Suzuki</option>
                  <option name="Hyundai">Hyundai</option>
                  <option name="Honda">Honda</option>
                  <option name="Ford">Ford</option>
                  <option name="Mahindra">Mahindra</option>
                  <option name="BMW">BMW</option>
                  <option name="Porche">Porche</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-2">
              <label>Prize :</label>
                <input class="form-control" type="number" name="prizemin" value="" placeholder="Min - 1 lakh" >
              </div>
              <div class="form-group col-md-2">
              <label> </label>
                <input class="form-control" type="number" name="prizemax" value="" placeholder="Max - 1 crore" >                
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-2">
              <label>Engine Capacity (in CC ) :</label>
                <input class="form-control" type="number" name="ccmin" value="" placeholder="Min - 800cc" >
            </div>
            <div class="form-group col-md-2">
              <label> </label>
                <input class="form-control" type="number" name="ccmax" value="" placeholder="Max - 6000cc" >                
              </div>
            </div>
            <div class="form-group"> 
                <button type="submit" class="btn btn-primary">Submit</button>
            </div> 
          </form>